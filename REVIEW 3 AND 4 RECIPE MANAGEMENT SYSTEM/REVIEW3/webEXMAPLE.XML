<!-- RecipeFormServlet -->
<servlet>
    <servlet-name>RecipeFormServlet</servlet-name>
    <servlet-class>com.example.recipemanager.controller.RecipeFormServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
    <servlet-name>RecipeFormServlet</servlet-name>
    <url-pattern>/recipe-form</url-pattern>
</servlet-mapping>

